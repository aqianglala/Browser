<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/news_item_padding_left"
    android:paddingRight="@dimen/news_item_padding_right"
    android:paddingTop="@dimen/news_item_padding_top"
    android:paddingBottom="@dimen/news_item_padding_bottom">
    
    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="87.5dp"
        android:layout_height="70dp"
        android:background="@color/empty_news_bg"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/empty_news_bg"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@id/iv_thumbnail"
        android:layout_toRightOf="@id/iv_thumbnail"
        />

    <TextView
        android:id="@+id/tv_source"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:background="@color/empty_news_bg"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/iv_thumbnail"
        android:layout_marginLeft="8dp"/>

</RelativeLayout>