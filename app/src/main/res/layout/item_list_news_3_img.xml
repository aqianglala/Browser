<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/news_item_padding_left"
    android:paddingRight="@dimen/news_item_padding_right"
    android:paddingTop="@dimen/news_item_padding_top"
    android:paddingBottom="@dimen/news_item_padding_bottom"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
        
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_third"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/TextAppearance.AppCompat.Caption"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>