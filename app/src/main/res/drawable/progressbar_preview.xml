<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/progressBar_color_background"
                android:centerColor="@color/progressBar_color_background"
                android:centerY="0.75"
                android:endColor="@color/progressBar_color_background"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/progressBar_color_foreground"
                    android:centerColor="@color/progressBar_color_foreground"
                    android:centerY="0.75"
                    android:endColor="@color/progressBar_color_foreground"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>